rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Campaign stamp images
    match /campaigns/{campaignId}/{allPaths=**} {
      // For now, allow anyone to read and write
      // In production, you should add authentication and proper rules
      allow read, write: if true;
      
      // Example with authentication (uncomment when you add Firebase Auth):
      // allow read: if request.auth != null;
      // allow write: if request.auth != null;
    }
    
    // Homepage preview images
    match /homepage/preview/{sessionId} {
      // For now, allow anyone to read and write
      // In production, you should add authentication and proper rules
      allow read, write: if true;
      
      // Example with authentication (uncomment when you add Firebase Auth):
      // allow read: if request.auth != null;
      // allow write: if request.auth != null;
    }
  }
}

