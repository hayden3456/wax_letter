		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@stripe/stripe-js": "^8.5.2",
		"firebase": "^12.6.0",
